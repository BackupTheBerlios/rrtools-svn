@0GetNum_GetAreaWith:
	jsr GetNum_GetArea
	bcs GetAreaWithErr
	jsr Spaces
	bcs GetAreaWithErr0
	jsr GetNum_Adress		;GetHexLong
	bcs GetAreaWithErr1
	ldx #RangeZp_With
	jmp LongLib_StorePtr

GetAreaWithErr0:
	.ShowErr(Err_Area_NoWith)
	.DB $2c
GetAreaWithErr1:
	.ShowErr(Err_Area_With)
GetAreaWithErr:
	rts

@0GetNum_GetArea:
	jsr NextSpaces
	bcs GetAreaErr0
	jsr GetNum_Adress		;GetHexLong
	bcs GetAreaErr1
	ldx #RangeZp_From
	jsr LongLib_StorePtr
	jsr Spaces
	bcs GetAreaErr2
	jsr GetNum_Adress		;GetHexLong
	bcs GetAreaErr3
	ldx #RangeZp_To
	jsr LongLib_StorePtr
	ldx #RangeZp_From
	jsr LongLib_CmpLONGPtrWith
	bcs GetAreaErr4
	rts

GetAreaErr0:
	.ShowErr(Err_Area_NoFrom)
	.DB $2c
GetAreaErr1:
	.ShowErr(Err_Area_From)
	.DB $2c
GetAreaErr2:
	.ShowErr(Err_Area_NoTo)
	.DB $2c
GetAreaErr3:
	.ShowErr(Err_Area_To)
	.DB $2c
GetAreaErr4:
	.ShowErr(Err_Area_Upside)
	rts

;--------------------------------------

@0GetNum_GetRange:
	jsr GetRangeRts
	cmp #$ff
	bcs GetRange0
	sta RangeZp_Flags
GetRange0:
	rts

GetRangeRts:
	jsr NextSpaces
	bcc GetRangeRts1
	ldx #Adress
	jsr LongLib_LoadPtr
	ldx #RangeZp_From
	jsr LongLib_StorePtr
	lda #0
	rts
GetRangeRts1:
	cmp #'='
	bne GetRangeRts2
	jsr NextSpaces
	bcs GetRangeRtsErr0
	jsr GetNum_Adress		;GetHexLong
	bcs GetRangeRtsErr1
	jsr Spaces
	bcc GetRangeRtsErr2
	ldx #RangeZp_From
	jsr LongLib_StorePtr
	lda #RangeFlag_Up
	rts
GetRangeRts2:
	jsr GetNum_Adress		;GetHexLong
	bcs GetRangeRtsErr1
	ldx #RangeZp_From
	jsr LongLib_StorePtr
	jsr Spaces
	bcc GetRangeRts3
	lda #RangeFlag_SingleLine
	rts
GetRangeRts3:
	cmp #'='
	bne GetRangeRts6
	jsr NextSpaces
	bcc GetRangeRts4
	lda #0
	rts
GetRangeRts4:
	jsr GetNum_Adress		;GetHexLong
	bcs GetRangeRtsErr3
	jsr Spaces
	bcc GetRangeRtsErr4
	ldx #RangeZp_To
	jsr LongLib_StorePtr
	ldx #RangeZp_From
	jsr LongLib_CmpWithLONGPtr
	lda #RangeFlag_Up|RangeFlag_EndAdr
	bcc GetRangeRts5
	lda #RangeFlag_EndAdr
GetRangeRts5:
	rts
GetRangeRts6:
	jsr GetRangeRts4
	cmp #$ff
	bcs GetRangeRts7
	ora #RangeFlag_NonStop
GetRangeRts7:
	rts

GetRangeRtsErr0:
	.ShowErr(Err_Area_NoFrom)
	.DB $2c
GetRangeRtsErr1:
	.ShowErr(Err_Area_From)
	.DB $2c
GetRangeRtsErr2:
	.ShowErr(Err_Area_AFrom)
	.DB $2c
GetRangeRtsErr3:
	.ShowErr(Err_Area_To)
	.DB $2c
GetRangeRtsErr4:
	.ShowErr(Err_Area_ATo)
	lda #$ff
	rts

;--------------------------------------

@0GetNum_Adress:
	jsr GetNum_GetHexLong
	bcs GetNum_AdressErr
	cmp #1
	beq GetNum_Adress0
	bcs GetNum_Adress1
	lda GetNumBSS_Pad1
	ldx GetNumBSS_Pad1+1
	jsr LongLib_AddWORD
	lda #0
	sta LongLibZp_Akku0+2
	beq GetNum_Adress1
GetNum_Adress0:
	lda GetNumBSS_Pad2
	sta LongLibZp_Akku0+2
GetNum_Adress1:
	ldx #GetNumZp_Val1
	jsr LongLib_StorePtr
	lda #2
	clc
	rts

GetNum_AdressErr:
	sec
	rts

;--------------------------------------

@0GetNum_GetDezLong:
	lda #2
	ldx #10>>1
	bne GetNum_In0

@0GetNum_GetHexLong:
	lda #2
@0GetNum_GetHexNDig:
	ldx #16>>1
GetNum_In0:
	sta GetNumZp_MaxDigits
	stx GetNumZp_DefaultSystem
	jsr GetXNum
	bcs GetNum_Err
	tay
	cmp GetNumZp_MaxDigits
	beq GetNum_Ok
	bcs GetNum_Err
GetNum_Ok:

	ldx #GetNumZp_Val1
	jsr LongLib_LoadPtr
	tya
	clc
	rts

GetNum_Err:
	sec
	rts

;--------------------------------------

GetXNum:
	lda #0
	sta GetNumZp_ArgLen
GetXNum_Loop:
;Position retten, wenn an dieser Stelle Ende ist
	ldx GetNumZp_ArgLen
	lda CmdLinePos
	sta GetNumBSS_PosBuf,x

	jsr Spaces
	bcs Ready

	jsr GetOp
	bcc Oversize
	jsr GetNum
	bcs Ready
	pha
	jsr GetNumNormalLen
	sta GetNumZp_Val2
	pla
	cmp GetNumZp_Val2
	bne Oversize
	lda #$80
Oversize:
	ldx GetNumZp_ArgLen
	sta GetNumBSS_OpBuf,x
	lda GetNumZp_Val1
	sta GetNumBSS_NumBuf0,x
	lda GetNumZp_Val1+1
	sta GetNumBSS_NumBuf1,x
	lda GetNumZp_Val1+2
	sta GetNumBSS_NumBuf2,x
	lda GetNumZp_Val1+3
	sta GetNumBSS_NumBuf3,x
	inc GetNumZp_ArgLen
	bne GetXNum_Loop

Ready:
	lda GetNumZp_ArgLen
	bne KlammerTest
GetXNum_Error:
	;restore position
	lda GetNumBSS_PosBuf
	sta CmdLinePos
	sec
	rts


KlammerTest:
	ldx #0
	ldy #0
	lda #$ff
	sta GetNumZp_LastOkPos
Kla0:
	tya
	beq NoNumNum
	lda GetNumBSS_OpBuf-1,y
	bpl NoNumNum
	lda GetNumBSS_OpBuf,y
	bpl NoNumNum
	bmi KlaEnd2
NoNumNum:
	lda GetNumBSS_OpBuf,y
	cmp #MathOp_KlAuf
	bne Kla1
	inx
	bcs Kla2	;Carry ist gesetzt, da oben nach dem 'cmp' mit 'bne' verzweigt wurde
Kla1:
	cmp #MathOp_KlZu
	bne Kla2
	dex
	cpx #$ff
	beq KlaEnd
Kla2:
	txa

#ifdef _DebugGetNum_
	sta $04f0,y
#endif

	bne Kla3
	sty GetNumZp_LastOkPos
Kla3:
	iny
	cpy GetNumZp_ArgLen
	bcc Kla0
KlaEnd:
	ldy GetNumZp_LastOkPos
	iny
	beq GetXNum_Error
KlaEnd2:
	sty GetNumZp_ArgLen


	lda GetNumBSS_PosBuf,y
	sta CmdLinePos

#ifdef _DebugGetNum_
	sta $0518
#endif

;Find inner brackets

FindBrackets:
	lda GetNumZp_ArgLen
	cmp #2
	bcs FBra
	lda GetNumBSS_OpBuf	; Letzes Element Num=Ok, Op=Error!
	bpl MathError
	lda GetNumBSS_NumBuf0
	sta GetNumZp_Val1
	lda GetNumBSS_NumBuf1
	sta GetNumZp_Val1+1
	lda GetNumBSS_NumBuf2
	sta GetNumZp_Val1+2
	lda GetNumBSS_NumBuf3
	sta GetNumZp_Val1+3

	jsr GetNumNormalLen
	ora #$80
	cmp GetNumBSS_OpBuf
	bcs FindBrackets0
	lda GetNumBSS_OpBuf
FindBrackets0:
	and #$7f
	clc
	rts


FBra:
	ldy #0
FBra0:
	tya
	tax
FBra1:
	lda GetNumBSS_OpBuf,y
	cmp #MathOp_KlZu
	beq FBra2
	iny
	cmp #MathOp_KlAuf
	beq FBra0
	cpy GetNumZp_ArgLen
	bcc FBra1
FBra2:
	stx GetNumZp_StartBra
	sty GetNumZp_EndBra

#ifdef _DebugGetNum_
	stx $0519
	sty $051a
#endif

Solve:
	ldx #0
	stx GetNumZp_Solves
	ldx #MathOp_Anzahl-1
Solve0:
	ldy GetNumZp_StartBra
Solve1:
	txa
	pha
	jsr OpRtsTabJmp
	pla
	tax
	bcs MathError
	iny
	cpy GetNumZp_EndBra
	bcc Solve1
;	dex
	dex
	bpl Solve0

	lda GetNumZp_EndBra
	sec
	sbc GetNumZp_StartBra
	cmp #2
	bcc Solve2

	lda GetNumZp_Solves
	bne Solve
MathError:
	lda GetNumBSS_PosBuf
	sta CmdLinePos
	sec
	rts

Solve2:
	ldy GetNumZp_StartBra
	beq Solve3
	dey
	lda GetNumBSS_OpBuf+1,y
	sta GetNumBSS_OpBuf,y
	lda GetNumBSS_PosBuf+1,y	
	sta GetNumBSS_PosBuf,y
	lda GetNumBSS_NumBuf0+1,y
	sta GetNumBSS_NumBuf0,y
	lda GetNumBSS_NumBuf1+1,y
	sta GetNumBSS_NumBuf1,y
	lda GetNumBSS_NumBuf2+1,y
	sta GetNumBSS_NumBuf2,y
	lda GetNumBSS_NumBuf3+1,y
	sta GetNumBSS_NumBuf3,y
	
	jsr DelTwo
Solve3:
	jmp FindBrackets
	
	


OpRtsTabJmp:
	lda OpRtsLo,x
	sta GetNumBSS_OpJmp
	lda OpRtsHi,x
	sta GetNumBSS_OpJmp+1
	jmp (GetNumBSS_OpJmp)

OpRtsLo:
	.DB <OpRts_Or
	.DB <OpRts_Eor
	.DB <OpRts_Not
	.DB <OpRts_And

	.DB <OpRts_ShiftL,	<OpRts_ShiftR

	.DB <OpRts_Positiv,	<OpRts_Negativ
	.DB <OpRts_Plus,	<OpRts_Minus
	.DB <OpRts_Mult,	<OpRts_Division,	<OpRts_Modulo
	.DB <OpRts_Lo,		<OpRts_Hi,		<OpRts_Bank

OpRtsHi:
	.DB >OpRts_Or
	.DB >OpRts_Eor
	.DB >OpRts_Not
	.DB >OpRts_And

	.DB >OpRts_ShiftL,	>OpRts_ShiftR

	.DB >OpRts_Positiv,	>OpRts_Negativ
	.DB >OpRts_Plus,	>OpRts_Minus
	.DB >OpRts_Mult,	>OpRts_Division,	>OpRts_Modulo
	.DB >OpRts_Lo,		>OpRts_Hi,		>OpRts_Bank



CheckForDoubleOp:
	tya
	clc
	adc #2
	cmp GetNumZp_EndBra
	bcs CheckForOp_No
	lda GetNumBSS_OpBuf,y
	bpl CheckForOp_No
	lda GetNumBSS_OpBuf+2,y
	bpl CheckForOp_No
	txa
	cmp GetNumBSS_OpBuf+1,y
	bne CheckForOp_No
	lda GetNumBSS_NumBuf0,y
	sta GetNumZp_Val1
	lda GetNumBSS_NumBuf1,y
	sta GetNumZp_Val1+1
	lda GetNumBSS_NumBuf2,y
	sta GetNumZp_Val1+2
	lda GetNumBSS_NumBuf3,y
	sta GetNumZp_Val1+3
	lda GetNumBSS_NumBuf0+2,y
	sta GetNumZp_Val2
	lda GetNumBSS_NumBuf1+2,y
	sta GetNumZp_Val2+1
	lda GetNumBSS_NumBuf2+2,y
	sta GetNumZp_Val2+2
	lda GetNumBSS_NumBuf3+2,y
	sta GetNumZp_Val2+3
	clc
	rts
CheckForOp_No:
	sec
	rts


CheckForSingleOp:
	tya
	clc
	adc #1
	cmp GetNumZp_EndBra
	bcs CheckForOp_No
	lda GetNumBSS_OpBuf+1,y
	bpl CheckForOp_No
	txa
	cmp GetNumBSS_OpBuf,y
	bne CheckForOp_No
	lda GetNumBSS_NumBuf0+1,y
	sta GetNumZp_Val1
	lda GetNumBSS_NumBuf1+1,y
	sta GetNumZp_Val1+1
	lda GetNumBSS_NumBuf2+1,y
	sta GetNumZp_Val1+2
	lda GetNumBSS_NumBuf3+1,y
	sta GetNumZp_Val1+3
	clc
	rts

DelTwo:
	lda GetNumZp_Val1
	sta GetNumBSS_NumBuf0,y
	lda GetNumZp_Val1+1
	sta GetNumBSS_NumBuf1,y
	lda GetNumZp_Val1+2
	sta GetNumBSS_NumBuf2,y
	lda GetNumZp_Val1+3
	sta GetNumBSS_NumBuf3,y

;	lda GetNumBSS_OpBuf,y
;	cmp GetNumBSS_OpBuf+2,y
;	bcs DelTwo1
;	lda GetNumBSS_OpBuf+2,y

DelTwo1:
	tya
	tax
DelTwo0:
	inx
	lda GetNumBSS_OpBuf+2,x	
	sta GetNumBSS_OpBuf,x
	lda GetNumBSS_PosBuf+2,x	
	sta GetNumBSS_PosBuf,x
	lda GetNumBSS_NumBuf0+2,x	
	sta GetNumBSS_NumBuf0,x
	lda GetNumBSS_NumBuf1+2,x	
	sta GetNumBSS_NumBuf1,x
	lda GetNumBSS_NumBuf2+2,x	
	sta GetNumBSS_NumBuf2,x
	lda GetNumBSS_NumBuf3+2,x	
	sta GetNumBSS_NumBuf3,x

	cpx GetNumZp_ArgLen		;Ja, nicht EndBra!
	bcc DelTwo0
	inc GetNumZp_Solves
	dec GetNumZp_EndBra
	dec GetNumZp_EndBra
	dec GetNumZp_ArgLen
	dec GetNumZp_ArgLen
	rts

DelOne:
	lda GetNumZp_Val1
	sta GetNumBSS_NumBuf0+1,y
	lda GetNumZp_Val1+1
	sta GetNumBSS_NumBuf1+1,y
	lda GetNumZp_Val1+2
	sta GetNumBSS_NumBuf2+1,y
	lda GetNumZp_Val1+3
	sta GetNumBSS_NumBuf3+1,y

	tya
	tax
DelOne0:
	lda GetNumBSS_OpBuf+1,x	
	sta GetNumBSS_OpBuf,x
	lda GetNumBSS_PosBuf+1,x	
	sta GetNumBSS_PosBuf,x
	lda GetNumBSS_NumBuf0+1,x	
	sta GetNumBSS_NumBuf0,x
	lda GetNumBSS_NumBuf1+1,x	
	sta GetNumBSS_NumBuf1,x
	lda GetNumBSS_NumBuf2+1,x	
	sta GetNumBSS_NumBuf2,x
	lda GetNumBSS_NumBuf3+1,x	
	sta GetNumBSS_NumBuf3,x
	inx
	cpx GetNumZp_ArgLen		;Ja, nicht EndBra!
	bcc DelOne0
	inc GetNumZp_Solves
	dec GetNumZp_EndBra
	dec GetNumZp_ArgLen
	rts

;--------------------------------------
; Math Routinen. Operand1 und 2 in Val1 und 2
; Ergebnis in Val1
; Zp in Val 3
;--------------------------------------


OpRts_Positiv:
	ldx #MathOp_Plus
	jsr CheckForSingleOp
	bcs OpRts_Positiv_No
	jsr DelOne
	dey
OpRts_Positiv_No:
	clc
	rts


OpRts_Negativ:
	ldx #MathOp_Minus
	jsr CheckForSingleOp
	bcs OpRts_Negativ_No
	sec
	lda #0
	sbc GetNumZp_Val1
	sta GetNumZp_Val1
	lda #0
	sbc GetNumZp_Val1+1
	sta GetNumZp_Val1+1
	lda #0
	sbc GetNumZp_Val1+2
	sta GetNumZp_Val1+2
	lda #0
	sbc GetNumZp_Val1+3
	sta GetNumZp_Val1+3
	jsr DelOne
	dey
OpRts_Negativ_No:
	clc
	rts


OpRts_Plus:
	ldx #MathOp_Plus
	jsr CheckForDoubleOp
	bcs OpRts_Plus_No
	lda GetNumZp_Val1
	adc GetNumZp_Val2
	sta GetNumZp_Val1
	lda GetNumZp_Val1+1
	adc GetNumZp_Val2+1
	sta GetNumZp_Val1+1
	lda GetNumZp_Val1+2
	adc GetNumZp_Val2+2
	sta GetNumZp_Val1+2
	lda GetNumZp_Val1+3
	adc GetNumZp_Val2+3
	sta GetNumZp_Val1+3
	jsr DelTwo
	dey
OpRts_Plus_No:
	clc
	rts

OpRts_Minus:
	ldx #MathOp_Minus
	jsr CheckForDoubleOp
	bcs OpRts_Minus_No
	sec
	lda GetNumZp_Val1
	sbc GetNumZp_Val2
	sta GetNumZp_Val1
	lda GetNumZp_Val1+1
	sbc GetNumZp_Val2+1
	sta GetNumZp_Val1+1
	lda GetNumZp_Val1+2
	sbc GetNumZp_Val2+2
	sta GetNumZp_Val1+2
	lda GetNumZp_Val1+3
	sbc GetNumZp_Val2+3
	sta GetNumZp_Val1+3
	jsr DelTwo
	dey
OpRts_Minus_No:
	clc
	rts


OpRts_Mult:
	ldx #MathOp_Mult
	jsr CheckForDoubleOp
	bcs OpRts_Mult_No

	lda #0
	sta GetNumZp_Val3
	sta GetNumZp_Val3+2
	ldx #$20
OpRts_Mult0:
	lsr GetNumZp_Val3+3
	ror GetNumZp_Val3+2
	ror GetNumZp_Val3+1
	ror GetNumZp_Val3
	ror GetNumZp_Val1+3
	ror GetNumZp_Val1+2
	ror GetNumZp_Val1+1
	ror GetNumZp_Val1
	bcc OpRts_Mult1
	clc
	lda GetNumZp_Val3
	adc GetNumZp_Val2
	sta GetNumZp_Val3
	lda GetNumZp_Val3+1
	adc GetNumZp_Val2+1
	sta GetNumZp_Val3+1
	lda GetNumZp_Val3+2
	adc GetNumZp_Val2+2
	sta GetNumZp_Val3+2
	lda GetNumZp_Val3+3
	adc GetNumZp_Val2+3
	sta GetNumZp_Val3+3
OpRts_Mult1:
	dex
	bpl OpRts_Mult0
	lda GetNumZp_Val3
	ora GetNumZp_Val3+1
	ora GetNumZp_Val3+2
	ora GetNumZp_Val3+3
	beq OpRts_Mult2
	sec
	rts

OpRts_Mult2:
	jsr DelTwo
	dey
	clc
	rts
	
OpRts_Mult_No:
	clc
	rts


OpRts_Division:
	ldx #MathOp_Div
	jsr CheckForDoubleOp
	bcs OpRts_Div_No
	jsr OpRts_Div
	bcs OpRts_Div_Err
	jsr DelTwo
	dey
OpRts_Div_No:
	clc
OpRts_Div_Err:
	rts


OpRts_Modulo:
	ldx #MathOp_Modulo
	jsr CheckForDoubleOp
	bcs OpRts_Modulo_No
	jsr OpRts_Div
	bcs OpRts_Modulo_Err
	lda GetNumZp_Val3
	sta GetNumZp_Val1
	lda GetNumZp_Val3+1
	sta GetNumZp_Val1+1
	lda GetNumZp_Val3+2
	sta GetNumZp_Val1+2
	lda GetNumZp_Val3+3
	sta GetNumZp_Val1+3
	jsr DelTwo
	dey
OpRts_Modulo_No:
	clc
OpRts_Modulo_Err:
	rts

OpRts_Div:
	tya
	pha
	ldx #$1f
	lda GetNumZp_Val2
	ora GetNumZp_Val2+1
	ora GetNumZp_Val2+2
	ora GetNumZp_Val2+3
	bne OpRts_DivOk
	sec
	rts
OpRts_DivOk:
	lda #0
	sta GetNumZp_Val3
	sta GetNumZp_Val3+1
	sta GetNumZp_Val3+2
	sta GetNumZp_Val3+3
OpRts_Div0:
	asl GetNumZp_Val1
	rol GetNumZp_Val1+1
	rol GetNumZp_Val1+2
	rol GetNumZp_Val1+3
	rol GetNumZp_Val3
	rol GetNumZp_Val3+1
	rol GetNumZp_Val3+2
	rol GetNumZp_Val3+3

	sec
	lda GetNumZp_Val3
	sbc GetNumZp_Val2
	pha
	lda GetNumZp_Val3+1
	sbc GetNumZp_Val2+1
	pha
	lda GetNumZp_Val3+2
	sbc GetNumZp_Val2+2
	pha
	lda GetNumZp_Val3+3
	sbc GetNumZp_Val2+3
	bcc OpRts_Div1
	sta GetNumZp_Val3+3
	pla
	sta GetNumZp_Val3+2
	pla
	sta GetNumZp_Val3+1
	pla
	sta GetNumZp_Val3
	inc GetNumZp_Val1
	bne OpRts_Div2
OpRts_Div1:
	pla
	pla
	pla
OpRts_Div2:
	dex
	bpl OpRts_Div0
	pla
	tay
	clc
	rts


OpRts_ShiftL:
	ldx #MathOp_ShiftL
	jsr CheckForDoubleOp
	bcs OpRts_ShiftL_No
	lda GetNumZp_Val2+3
	ora GetNumZp_Val2+2
	ora GetNumZp_Val2+1
	bne OpRts_ShiftL0
	ldx GetNumZp_Val2
	beq OpRts_ShiftL2
	cpx #$21
	bcc OpRts_ShiftL1
OpRts_ShiftL0:
	ldx #$21
OpRts_ShiftL1:
	asl GetNumZp_Val1
	rol GetNumZp_Val1+1
	rol GetNumZp_Val1+2
	rol GetNumZp_Val1+3
	dex
	bne OpRts_ShiftL1
OpRts_ShiftL2:
	jsr DelTwo
	dey
OpRts_ShiftL_No:
	clc
	rts

OpRts_ShiftR:
