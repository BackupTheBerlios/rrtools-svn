GetNum:
	lda GetNumZp_DefaultSystem
	sta GetNumZp_System

	lda #0
	sta GetNumZp_Val1
	sta GetNumZp_Val1+1
	sta GetNumZp_Val1+2
	sta GetNumZp_Val1+3

	lda #$ff
	sta GetNumZp_Digits
	jsr Spaces
	bcs Error
	cmp #$1c			/* Pfundzeichen */
	bne GetNumNoLabel
	jsr NextCmdChar
	jmp GetLab
GetNumNoLabel:
	ldx #256>>1
	cmp #$27			/* Screencode ''' */
	beq FoundSys
	ldx #16>>1
	cmp #'$'			/* Hex */
	beq FoundSys
	ldx #10>>1
	cmp #'!'			/* Dez */
	beq FoundSys
	ldx #8>>1
	cmp #'&'			/* Oct */
	beq FoundSys
	ldx #2>>1
	cmp #'%'			/* Bin */
	bne DefaultSys
FoundSys:
	stx GetNumZp_System

Loop:
	jsr NextCmdChar
	bcs Ende
DefaultSys:
	bit GetNumZp_System		;NumberSystem = Screencode?
	bpl CheckHex			;Dann nicht in Hexnibble wandeln
	cmp #$27			;'''
	beq Ende2
	bne CharOk
CheckHex:
	jsr GetNum_ToHex
	bcs Ende
	tax
	lsr
	cmp GetNumZp_System
	bcs Ende
	txa
CharOk:
	jsr Multiply
	bcs Error			;Overflow
	inc GetNumZp_Digits
	bcc Loop
Ende2:
	jsr NextCmdChar
Ende:
	lda GetNumZp_Digits
	bmi Error
	jsr GetNumDigitsLen
	clc
	rts
Error:
	sec
	rts


Multiply:
	pha
	ldy #7
	lda #0
	sta GetNumZp_Val2
	sta GetNumZp_Val2+1
	sta GetNumZp_Val2+2
	sta GetNumZp_Val2+3
	ldx GetNumZp_System
Multiply0:
	asl GetNumZp_Val1
	rol GetNumZp_Val1+1
	rol GetNumZp_Val1+2
	rol GetNumZp_Val1+3
	txa
	lsr
	tax
	bcc Multiply1
	clc
	lda GetNumZp_Val1
	adc GetNumZp_Val2
	sta GetNumZp_Val2
	lda GetNumZp_Val1+1
	adc GetNumZp_Val2+1
	sta GetNumZp_Val2+1
	lda GetNumZp_Val1+2
	adc GetNumZp_Val2+2
	sta GetNumZp_Val2+2
	lda GetNumZp_Val1+3
	adc GetNumZp_Val2+3
	sta GetNumZp_Val2+3
	bcs MultiplyOverFlow
Multiply1:
	dey
	bpl Multiply0
	pla
	adc GetNumZp_Val2
	sta GetNumZp_Val1
	lda GetNumZp_Val2+1
	adc #0
	sta GetNumZp_Val1+1
	lda GetNumZp_Val2+2
	adc #0
	sta GetNumZp_Val1+2
	lda GetNumZp_Val2+3
	adc #0
	sta GetNumZp_Val1+3
	bcs MultiplyOverFlow
	rts
MultiplyOverFlow:
	sec
	rts


GetNumDigitsLen:
	lda GetNumZp_Digits
	ldx GetNumZp_System
	bmi GetNumLen2		;Screencode
	cpx #$10>>1
	beq GetNumLen1		;Hex
	cpx #8>>1
	beq GetNumLen0		;Oct
	cpx #2>>1		;Bin
	bne GetNumNormalLen
	lsr
GetNumLen0:
	lsr
GetNumLen1:
	lsr
GetNumLen2:
	ora #$80
	rts
	
