LdHDPsyStart:
    .PSEUDOPC LdSerialEnd

    .(	;*** LdHD ***

;--------------------------------------

@0LdHDReadBlock:
	jsr LdSerial_LdSendH
        ldy #0
        sty LdHostDp
LdHDGet:
	bit LdHostDp
	bmi LdHDGet
	jsr LdHDGByte
	bne LdHDErr
        ;tay
LdHDGLoop:
	jsr LdHDGByte
	sta LdBf,y
	iny
	bne LdHDGLoop
	ldx LdBf+1
	lda LdBf
	beq LdHDGet0
	ldx #$FF
LdHDGet0:
	dex
	stx LdChk
	clc
	rts

LdHDErr:
	sec
	rts

LdHDGByte:
	ldx #Serial_Atn
	lda LdHostDp
	stx LdHostDp
	lsr
	lsr
	ldx #0
	eor LdHostDp
	stx LdHostDp
	lsr
	lsr
	ldx #Serial_Atn
	eor LdHostDp
	stx LdHostDp
	lsr
	lsr
	sta LdGZp
	ldx #0
	lda LdHostDp
	stx LdHostDp
	and #$c0
	eor LdGZp
	rts

;--------------------------------------

    .)	;*** LdHD ***

LdHDEnd:
    .REALPC


